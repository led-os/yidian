<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/protal_test"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:background="@drawable/btn_circle_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="多tab信息流"
        android:textColor="@color/common_red_a400" />

    <Button
        android:id="@+id/list_test"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_circle_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="单列表信息流"
        android:textColor="@color/common_red_a400" />

    <Button
        android:id="@+id/view_test"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_circle_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="卡片信息流"
        android:textColor="@color/common_red_a400" />

    <Button
        android:id="@+id/scrollview_test"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_circle_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="滑动信息流"
        android:textColor="@color/common_red_a400" />



    <Button
        android:id="@+id/viewpager_test"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_circle_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="外部viewpager嵌套单列表"
        android:textColor="@color/common_red_a400" />

    <Button
        android:id="@+id/customtheme_test"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_circle_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="自定义主题"
        android:textColor="@color/common_red_a400"/>


    <Button
        android:id="@+id/customtheme_test2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_circle_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="自定义主题2"
        android:textColor="@color/common_red_a400"/>

</LinearLayout>