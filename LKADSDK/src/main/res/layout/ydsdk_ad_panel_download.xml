<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ydsdk_ad_list_tag"
        android:gravity="center"
        android:maxLength="2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/ydsdk_ad_tag_text"
        android:textSize="9dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/ydsdk_ad_other_text"
            android:textSize="@dimen/ydsdk_ad_news_list_source"
            tools:text="source" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/ydsdk_ad_other_text"
            android:textSize="@dimen/ydsdk_ad_news_list_source"
            tools:text="count" />
    </LinearLayout>


    <ImageView
        android:id="@+id/btnToggle"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:clickable="true"
        android:paddingRight="10dp"
        android:src="@drawable/ydsdk_list_feedback_trigger" />

    <TextView
        android:id="@+id/downloadBtn"
        style="@style/ydsdk_ad_download_btn"
        android:layout_gravity="center_vertical" />
</LinearLayout>
