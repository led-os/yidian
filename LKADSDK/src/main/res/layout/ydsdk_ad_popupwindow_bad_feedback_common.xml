<?xml version="1.0" encoding="utf-8"?>
<com.linken.newssdk.widget.feedback.normal.PopupLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:layout_gravity="right"
        android:id="@+id/hint_image_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ydsdk_feedback_bg_down" />

    <LinearLayout
        android:id="@+id/win_bg"
        android:paddingTop="12dp"
        android:paddingBottom="0dp"
        android:background="@drawable/ydsdk_feedback_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/feedback_top_tip"
            android:layout_gravity="center"
            android:text="@string/ydsdk_ad_dislike_reason_hint"
            android:fontFamily="miui"
            android:textColor="@color/ydsdk_skin_primary_red"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/first_line"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckedTextView
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@drawable/ydsdk_badfeedback_textcolor_state"
                android:clickable="true"
                android:background="@drawable/ydsdk_badfeedback_state"
                android:id="@+id/reason1"
                android:fontFamily="miui"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:text=""
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="33dp" />

            <CheckedTextView
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@drawable/ydsdk_badfeedback_textcolor_state"
                android:clickable="true"
                android:background="@drawable/ydsdk_badfeedback_state"
                android:id="@+id/reason2"
                android:fontFamily="miui"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_line"
            android:visibility="visible"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckedTextView
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@drawable/ydsdk_badfeedback_textcolor_state"
                android:clickable="true"
                android:background="@drawable/ydsdk_badfeedback_state"
                android:id="@+id/reason3"
                android:fontFamily="miui"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:text=""
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="33dp" />

            <CheckedTextView
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@drawable/ydsdk_badfeedback_textcolor_state"
                android:clickable="true"
                android:background="@drawable/ydsdk_badfeedback_state"
                android:id="@+id/reason4"
                android:fontFamily="miui"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:text="-"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/last_line"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckedTextView
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@drawable/ydsdk_badfeedback_textcolor_state"
                android:clickable="true"
                android:background="@drawable/ydsdk_badfeedback_state"
                android:id="@+id/reason5"
                android:fontFamily="miui"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:text="-"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="33dp" />

            <CheckedTextView
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@drawable/ydsdk_badfeedback_textcolor_state"
                android:clickable="true"
                android:background="@drawable/ydsdk_badfeedback_state"
                android:id="@+id/reason6"
                android:fontFamily="miui"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:text="-"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="33dp" />
        </LinearLayout>

        <View
            android:id="@+id/feedback_divider"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/ydsdk_divider_bg"  />

        <TextView
            android:id="@+id/btnOK"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/ydsdk_ad_dislike"
            android:fontFamily="miui"
            android:textColor="@color/ydsdk_text_grey"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

    <ImageView
        android:layout_gravity="right"
        android:id="@+id/hint_image_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ydsdk_feedback_bg_up" />

</com.linken.newssdk.widget.feedback.normal.PopupLinearLayout>