<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ydsdk_ad_list_tag"
            android:gravity="center"
            android:maxLength="2"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/ydsdk_ad_tag_text"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tag"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/ydsdk_ad_other_text"
            android:textSize="@dimen/ydsdk_ad_news_list_source"
            tools:text="-" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/source"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/ydsdk_ad_other_text"
            android:textSize="@dimen/ydsdk_ad_news_list_source"
            tools:text="-" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btnToggle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:scaleType="center"
        android:src="@drawable/ydsdk_list_feedback_trigger" />
</LinearLayout>
