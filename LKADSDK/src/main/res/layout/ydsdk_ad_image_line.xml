<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yidian="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imgLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.linken.newssdk.widget.views.YdRatioImageView
        android:id="@+id/news_img1"
        android:layout_width="0dp"
        android:layout_height="@dimen/ydsdk_ad_news_list_small_img_height"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        yidian:length_width_ratio="0.67" />

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent" />

    <com.linken.newssdk.widget.views.YdRatioImageView
        android:id="@+id/news_img2"
        android:layout_width="0dp"
        android:layout_height="@dimen/ydsdk_ad_news_list_small_img_height"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        yidian:length_width_ratio="0.67" />

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent" />

    <com.linken.newssdk.widget.views.YdRatioImageView
        android:id="@+id/news_img3"
        android:layout_width="0dp"
        android:layout_height="@dimen/ydsdk_ad_news_list_small_img_height"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        yidian:length_width_ratio="0.67" />
</LinearLayout>