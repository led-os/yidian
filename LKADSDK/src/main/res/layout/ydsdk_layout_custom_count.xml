<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/ydsdk_yellow_color"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:id="@+id/reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:padding="5dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_white_circle"
        android:orientation="vertical">

        <com.linken.newssdk.widget.views.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:donut_background_color="@color/ydsdk_white"
            custom:donut_circle_starting_degree="-90"
            custom:donut_finished_color="@color/ydsdk_yellow_color"
            custom:donut_finished_stroke_width="5dp"
            custom:donut_progress="30"
            custom:donut_text=""
            custom:donut_unfinished_color="@color/ydsdk_white"
            custom:donut_unfinished_stroke_width="5dp" />

        <ImageView
            android:padding="7dp"
            android:src="@drawable/ydsdk_red_packet"
            android:id="@+id/red_packet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/ydsdk_circle_yellow"
            android:gravity="center" />

    </FrameLayout>
</LinearLayout>